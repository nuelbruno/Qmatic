        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:weightSum="2"
            android:layout_height="45dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Remote Booking"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:id="@+id/btnRemoteBooking"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonblur_rounded"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Book an\nAppointment"
                android:textSize="14sp"
                android:id="@+id/btnBookAnAppointment"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_bg"
                android:layout_height="match_parent" />
        </LinearLayout>
</LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/white_bg_flat_border"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:layout_height="65dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Navigation: "
                    android:id="@+id/lbl1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/background_dark"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="7.5 Km Away"
                    android:id="@+id/lbl2"
                    android:layout_toRightOf="@+id/lbl1"
                    android:layout_toStartOf="@+id/imgnav"
                    android:layout_marginEnd="10dp"
                    android:gravity="left|center"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="@android:color/background_dark"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:src="@drawable/ic_branch_navigation"
                    android:layout_centerVertical="true"
                    android:id="@+id/imgnav"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/icon_size" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
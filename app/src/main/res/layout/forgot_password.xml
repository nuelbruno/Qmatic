<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rounded_white_edittext"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="13sp"
            android:text="Give your registred email address to Reset your password."
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@drawable/rounded_white_edittext"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:textSize="@dimen/textsize_medium"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@drawable/ic_email" />

            <!--<TextView
                android:textSize="@dimen/textsize_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/useremail"
                android:textAppearance="?android:attr/textAppearanceMedium" />-->

            <EditText
                android:id="@+id/editText_userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email address"
                android:textSize="@dimen/textsize_medium"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_weight="1" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtviewErrorEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your Email address."
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />
        <Button
            android:id="@+id/btnForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/button_bg"
            android:text="@string/forgotPassword_submit" />
    </LinearLayout>
</LinearLayout>
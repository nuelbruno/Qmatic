<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/ic_popup_background"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_height="match_parent">
            <!--<ImageView
                android:layout_width="32dp"
                android:background="@android:color/background_dark"
                android:layout_alignParentRight="true"
                android:layout_height="32dp" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/green_rounded"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/ServiceNameTitleView"
                    android:layout_width="wrap_content"
                    android:text="Visit Visa Application"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_flat_border"
                android:weightSum="2"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="28dp"
                            android:id="@+id/imgIconCal"
                            android:background="@android:color/holo_blue_light"
                            android:layout_height="28dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Your Appointment Date"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/txtviewAppointmentLabel"
                            android:layout_toRightOf="@+id/imgIconCal"
                            android:textSize="8sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/AppointmentDateView"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:layout_marginLeft="8dp"
                            android:textColor="@android:color/black"
                            android:layout_below="@+id/txtviewAppointmentLabel"
                            android:layout_toRightOf="@+id/imgIconCal"
                            android:textSize="15sp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:layout_width="0.5dp"
                    android:background="@android:color/darker_gray"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="28dp"
                            android:id="@+id/imgIconclock"
                            android:background="@android:color/holo_green_dark"
                            android:layout_height="28dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Your Appointment Time"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/txtviewAppointmentTimeLabel"
                            android:layout_toRightOf="@+id/imgIconclock"
                            android:textSize="8sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/AppointTimeView"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:layout_marginLeft="8dp"
                            android:textColor="@android:color/black"
                            android:layout_below="@+id/txtviewAppointmentTimeLabel"
                            android:layout_toRightOf="@+id/imgIconclock"
                            android:textSize="15sp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="0.5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Branch"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtviewBranch"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="8sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/BranchNameView"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/txtviewBranch"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Service"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtviewService"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="8sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ServiceNameView"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/txtviewService"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Status"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtviewstatus"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="8sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/StatusView"
                    android:layout_width="wrap_content"
                    android:text="Booked"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/txtviewstatus"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_height="250dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:weightSum="2"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_height="100dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="20dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Token Number"
                            android:textColor="@android:color/darker_gray"
                            android:textStyle="normal"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_centerHorizontal="true"
                            android:textSize="10sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/black"
                            android:textStyle="normal"
                            android:textSize="25sp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:background="@android:color/darker_gray"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="1dp"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="20dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="100dp"
                            android:src="@drawable/qrcode"
                            android:layout_centerInParent="true"
                            android:layout_height="100dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ButtonLayout"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:weightSum="2"
                    android:layout_height="40dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:id="@+id/btnCancel"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_red_cancel_button"
                        android:layout_height="match_parent" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Reschedule"
                        android:id="@+id/btnRechedule"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_bg"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>